#!/bin/zsh

. ~/.config/bspwm/panel/panel_config

clock() {
    # Output clock format "Mon 01 Jan 2015 00:00"
    dateo=`date '+%a %d %b %R'`
    echo "%{F$BASE05}%{B$BASE01} $icoTIME %{F-}%{B$BASE00} $dateo"

}

#mail() {
#    newmail=`ls Mail/zidhussein-gmail/INBOX/new | wc -l`
#    echo "%{F$BASE05}%{B$BASE01} $icoMAIL %{F-}%{B$BASE00} $newmail"

#}

volume() {
    # Get current volume
    vol=`amixer get Master | grep 'Front Left' | egrep -o "[0-9]+%" |\
        rev | cut -c 2- | rev`

    # Decide which icon and colour to show
    if [ ! `amixer get Master | tail -1 | grep -oe off` ]; then
        if [ $vol == 0 ]; then
            volico="%{F$BASE05}%{B$BASE01} $icoVOL0 %{F-}%{B$BASE00}"
        else
            volico="%{F$BASE05}%{B$BASE01} $icoVOL %{F-}%{B$BASE00}"
        fi
    else
        volico="%{F$BASE05}%{B$BASE01} $icoMUTE %{F-}%{B$BASE00}"
    fi

    # Change colour if volume is lower than 60
    if [ $vol -lt 60 ]; then
        vol="%{F$BASE05}%{B$BASE00}$vol"
    fi

    echo "$volico $vol"

}

cpu() {
    # Output CPU usage as an integer
    cpu=$(ps -eo pcpu | awk 'BEGIN {sum=0.0f} {sum+=$1} END {print sum}' | cut -c1-2)
    echo "%{F$BASE05}%{B$BASE01} $icoCPU %{F-}%{B$BASE00} $cpu%"
}

hdd() {
    # Show root partition % used and home volume remaining
    HDDROOT=`df -h | grep /dev/sda2 | awk '{print $5}'`
    HDDDATA=`df -h | grep /dev/sda4 | awk '{print $4}'`
    echo "%{F$BASE05}%{B$BASE01} / %{F-}%{B$BASE00} $HDDROOT %{F$BASE05}%{B$BASE01} $icoSTORAGE %{F-}%{B$BASE00} $HDDATA"

}

ram() {
    # Show ram used / ram total
    total=`free -mh | grep Mem | awk '{print $3}'`
    free=`free -mh | grep Mem | awk '{print $2}'`
    echo "%{F$BASE05}%{B$BASE01} $icoRAM %{F-}%{B$BASE00} $total / $free"
}


internet() {
    # Show wifi ssid if connected.
    dev="enp3s6"
    #ssid="$(iwgetid -r)"
    #if [ ! $ssid ]; then
    #    echo "%{F$BASE05}%{B$BASE01} $icoDISCO %{F-}%{B$BASE00} Disconnected"
    #else
    #    echo "%{F$BASE05}%{B$BASE01} $icoCONN %{F-}%{B$BASE00} $ssid"
    #fi
    # strength="$(iw dev $dev link | grep signal | egrep -o '[0-9]+')"
    # echo -e "$ssid  $strength"

    ETHERNET_IP=$(ifconfig enp3s6 | grep "inet " | cut -d' ' -f10)
    if [ ! $ETHERNET_IP ]; then
	 echo "%{F$BASE05}%{B$BASE01} $icoDISCO %{F-}%{B$BASE00} Disconnected" 
    else echo "%{F$BASE05}%{B$BASE01} $icoCONN %{F-}%{B$BASE00} $ETHERNET_IP"
    fi

}

archinfo() {
    # Other system information
    # hostname=`uname -n`
    uptime=`uptime | sed 's/.* up *//;s/[0-9]* us.*//;s/ day, /d /;s/ days, /d /;s/:/h /;s/ min//;s/,/m/;s/ / /'`
    # packages=`pacman -Q | wc -l`

    echo "%{F$BASE05}%{B$BASE01} $icoUPTIME %{F-}%{B$BASE00} $uptime"
}

while true; do

    printf "%s\n" "a$(archinfo)"
    printf "%s\n" "R$(ram)"
    printf "%s\n" "C$(cpu)"
    printf "%b\n" "V$(volume)"
    printf "%s\n" "w$(internet)"
    printf "%s\n" "T$(clock)"
    printf "%s\n" "h$(hdd)"
    #printf "%s\n" "N$(mail)"
    sleep 0.5
done
