    # Height of panel
 #   bspc config top_padding $PANEL_HEIGHT

    # Output extra scripts to the panel_fifo
#    ~/.config/bspwm/panel/barinfo > "$PANEL_FIFO$i" &
#    ~/.config/bspwm/panel/bar_mpd > "$PANEL_FIFO$i" &

    # Get current monitor width
#    CUR_MON_WIDTH=$(bspc query -T -m $i | grep -oE "[0-9]{2,6}" | head -n 1)


    # Running bar
#    cat "$PANEL_FIFO$i" | ~/.config/bspwm/panel/panel_bar$i |\
